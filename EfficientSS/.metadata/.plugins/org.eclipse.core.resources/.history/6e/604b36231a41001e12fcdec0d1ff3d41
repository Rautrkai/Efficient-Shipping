package com.app.EfficientSS.beans;
import java.util.HashMap;
import java.util.Map;

import javax.persistence.Entity;
import javax.persistence.Id;

@Entity
public class EstimatePrice {
	@Id
    private int estimateId;
    private Map<String, double[]> cityCoordinates;

    public EstimatePrice() {
        this.estimateId = 0;
        this.cityCoordinates = new HashMap<>();

        // Initialize city coordinates for Pune, Mumbai, Jalna, Kolhapur, Nashik, Nagpur
        cityCoordinates.put("Pune", new double[]{18.5204, 73.8567});
        cityCoordinates.put("Mumbai", new double[]{19.0760, 72.8777});
        cityCoordinates.put("Jalna", new double[]{19.8455, 75.8860});
        cityCoordinates.put("Kolhapur", new double[]{16.7041, 74.2437});
        cityCoordinates.put("Nashik", new double[]{20.5937, 78.9629});
        cityCoordinates.put("Nagpur", new double[]{21.1458, 79.0882});
    }
}