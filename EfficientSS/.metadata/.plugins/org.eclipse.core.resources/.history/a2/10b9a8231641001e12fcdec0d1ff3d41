package com.app.EfficientSS.beans;

import javax.persistence.Entity;
import javax.persistence.Id;
import java.lang.Math;



public class Estimated_Price {

	

	    public static double calculateDistance(double latitude1, double longitude1, double latitude2, double longitude2) {
	        double Radius = 6371; // Earth's radius in km
	        
	        //calculate difference in latitude and longitude beetween two point
	        double diff_Latitude = Math.toRadians(latitude2 - latitude1);
	        double diff_Longitude = Math.toRadians(longitude2 - longitude1);
	        
	        double calculate = Math.sin(diff_Latitude / 2) * Math.sin(diff_Latitude / 2) +
	                   Math.cos(Math.toRadians(latitude1)) * Math.cos(Math.toRadians(latitude2)) *
	                   Math.sin(diff_Longitude / 2) * Math.sin(diff_Longitude / 2);
	        
	        double c = 2 * Math.atan2(Math.sqrt(calculate), Math.sqrt(1 - calculate));
	        
	        double distance = Radius * c;
	        
	        return distance;
	    }
	    
	    public static void main(String[] args) {
	        // Assuming you have selected city values from dropdowns
	        String city1 = "Pune";
	        String city2 = "Satara";
	        
	        // City coordinates
	        double[][] cityCoordinates = {
	            // Latitude, Longitude
	            { 18.5204, 73.8567 }, // Pune
	            { 20.9025, 74.7774 }, // Dhule
	            { 16.7050, 74.2433 }, // Kolhapur
	            { 17.6599, 75.9064 }, // Solapur
	            { 19.0760, 72.8777 }, // Mumbai
	            { 17.6868, 74.0007 }  // Satara
	        };
	        
	        int cityIndex1 = -1;
	        int cityIndex2 = -1;
	        
	        // Find indices of selected cities
	        for (int i = 0; i < cityCoordinates.length; i++) {
	            if (city1.equals(getCityName(i))) {
	                cityIndex1 = i;
	            }
	            if (city2.equals(getCityName(i))) {
	                cityIndex2 = i;
	            }
	        }
	        
	        if (cityIndex1 != -1 && cityIndex2 != -1) {
	            double distance = calculateDistance(
	                cityCoordinates[cityIndex1][0], cityCoordinates[cityIndex1][1],
	                cityCoordinates[cityIndex2][0], cityCoordinates[cityIndex2][1]
	            );
	            System.out.printf("Distance between %s and %s: %.2f km%n", city1, city2, distance);
	        } else {
	            System.out.println("Selected cities not found.");
	        }
	    }
	    
	    public static String getCityName(int index) {
	        String[] cityNames = {
	            "Pune", "Dhule", "Kolhapur", "Solapur", "Mumbai", "Satara"
	        };
	        return cityNames[index];
	    }
	}

